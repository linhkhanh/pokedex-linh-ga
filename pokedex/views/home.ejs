<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header>
        <a href="/" class="pokedex">
            <h1>POKEDEX</h1>
        </a>
        <nav>
            <a href="/pokemon" class="nav">List</a>
            <a href="/pokemon/new" class="nav">Create</a>
        </nav>
    </header>
    <div class="logo">
        <img src="/logo-pokemon.png" class="pokemon">
    </div>
    <form class="form-search" action="/pokemon/search" method="GET">
        <input type="submit" value="&#x1F50E" class="search">
        <input type="text" name="name" list="pokemonList" placeholder="Search Pokemon">
        <datalist id="pokemonList">
            <% data.forEach((item) => { %>
                <option value="<%= item.name; %>"></option>
            <% }) %>
        </datalist>
    </form>

</body>

</html>